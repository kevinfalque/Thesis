			  }%
		}{%
		  	\pdfinfo {   %% pdfLaTeX without hyperref
				/Title (\@titlemetalang)
				/Creator (pdfLaTeX)
				/Author (\@author)
				/Subject (\@titlemetaalt)
				/Keywords (\@motscles, \@keywords) 
			}%
		}%
	}%
\else
	\PackageWarning{thcover}{Use pdfLaTex or add metadata after conversion to PDF}
\relax
\fi
}

